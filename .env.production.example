# ===========================================
# AI Community Platform - PRODUCTION Environment
# ===========================================
# IMPORTANT: Copy this file to .env.production and fill in all values
# NEVER commit .env.production to version control!

# ===========================================
# Core Application Settings
# ===========================================
DEBUG=false
ENVIRONMENT=production
SECRET_KEY=generate-a-64-char-random-string-here

# ===========================================
# Database (Managed by docker-compose)
# ===========================================
POSTGRES_USER=caafw_prod
POSTGRES_PASSWORD=generate-strong-password-here
POSTGRES_DB=ai_community_prod

# Redis password
REDIS_PASSWORD=generate-strong-password-here

# ===========================================
# Domain Configuration
# ===========================================
DOMAIN=caafw.org
CORS_ORIGINS=["https://caafw.org","https://www.caafw.org"]

# Frontend API URL (used during build)
NEXT_PUBLIC_API_URL=https://caafw.org

# ===========================================
# OAuth Redirect URIs (Production)
# ===========================================
GOOGLE_REDIRECT_URI=https://caafw.org/auth/callback/google
MICROSOFT_REDIRECT_URI=https://caafw.org/auth/callback/microsoft
LINKEDIN_REDIRECT_URI=https://caafw.org/auth/callback/linkedin

# ===========================================
# API Keys - Fill in your production keys
# ===========================================

# HIGH PRIORITY
GITHUB_TOKEN=
YOUTUBE_API_KEY=
PRODUCT_HUNT_CLIENT_ID=
PRODUCT_HUNT_CLIENT_SECRET=
PRODUCT_HUNT_TOKEN=

# MEDIUM PRIORITY
TWITTER_BEARER_TOKEN=
TWITTER_API_KEY=
TWITTER_API_SECRET=
ADZUNA_APP_ID=
ADZUNA_API_KEY=
THE_MUSE_API_KEY=

# LOW PRIORITY
SEMANTIC_SCHOLAR_API_KEY=
CRUNCHBASE_API_KEY=
EVENTBRITE_API_KEY=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# ===========================================
# OAuth Providers
# ===========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
